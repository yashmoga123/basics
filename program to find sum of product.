#include <bits/stdc++.h> 
long long int sumOrProduct(long long int n, long long int q)
{
	 
    long long int sum=0, product=1;
	if(q==1){
		for(int i=1; i<=n; i++){
			sum += i;
		}
		return sum;
	}
	if( q==2){
		for(int i=1; i <= n; i++){
            product = (product*i)%10000000007;
		}
		return product;
	}

}
