#include<bits/stdc++.h>
using namespace std;
int main(){
	

	
	int n;
	cin>>n;
	
	int row = 0;
	while(row <= n){
		
		int space = 0;
		while(space < row){
			cout<<" ";
			space = space + 1;
		}
		int col = 1;
		while( col <= 2*(n-row)-1){
			cout<<"*";
			col = col + 1;
		}
		cout<<endl;
		row = row + 1;
		
	}
	
	
	
	return 0;
}
