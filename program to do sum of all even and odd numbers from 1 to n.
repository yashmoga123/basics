#include <bits/stdc++.h>
using namespace std;

int main() {
	
	int n;
	cin>>n; 
	int sum;
	int sum1 = 0;
	int sum2 = 0;
	
	for( int i = 1; i <= n; i++ ){
		if( i % 2 == 0){
			
			sum1 += i;
		}
		
	}
	for( int i = 1; i <= n; i++){
		
		if( i % 2 !=0){
			
			sum2 = sum2 + i;
		}
	}
	
	cout<<" sum of all even nums is "<<sum1<<endl;
	cout<<" sum of all odd nums is "<<sum2<<endl;
	
	
	
	
	
	
	return 0;
} 
