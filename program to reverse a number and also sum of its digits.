#include <bits/stdc++.h>
using namespace std;

int main() {
	
	int n;
	cin>>n;
	
	int sum = 0;
	int digit=0, d=0;
	int b = n;
	int a = n;
	while( n != 0){
		
		digit = digit*10+n%10;
		n = n/10;
	}
	while(a!=0){
		d = a%10;
		sum += d;
		a /= 10;
	}
	
	cout<<" the reverse of "<<b<<" is = "<<digit<<endl;
	cout<<"sum "<<sum;
	
	
	return 0;
}
